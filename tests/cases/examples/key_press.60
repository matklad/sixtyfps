W := Window {
    VerticalLayout {
        Rectangle { color: field.has_focus ? blue: red;  }
        field := FocusScope {
            vertical_stretch: 1;
            key-pressed(key) => {
                debug(key);
                t.text += key;
            }
            Rectangle { color: yellow; }
        }
        t:= Text {
            text: "> ";
        }
    }
}

